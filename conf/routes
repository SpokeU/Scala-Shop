# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                      controllers.Application.index
GET         /categories            controllers.CategoryController.all
POST        /category              controllers.CategoryController.add

#Items

GET         /items                 controllers.ItemsController.getAll
GET         /item/:category        controllers.ItemsController.getByCategory(category:String)
POST        /item                  controllers.ItemsController.add

#Brands

GET         /brands                controllers.BrandController.findAll

GET         /index                 controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /*file          controllers.Assets.at(path="/public", file)
